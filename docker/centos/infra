# syntax=docker/dockerfile:experimental

FROM docker.codingcafe.org/sandbox/centos:stage-ss

ARG LABEL_BUILD_ID=Undefined
LABEL BUILD_ID=$LABEL_BUILD_ID

COPY [".", "/etc/roaster/scripts"]

RUN --mount=type=cache,id=ccache,target=/root/.ccache /etc/roaster/scripts/setup.sh lz4 zstd cmake hiredis ccache c-ares axel intel ipt cuda ucx ompi
